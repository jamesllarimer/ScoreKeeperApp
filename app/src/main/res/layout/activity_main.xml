<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.jamesleftylarimer.scorekeeperapp.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/barcacrest"

            />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_green_light"
            android:onClick="setBarcaScore"
            android:text="Goal"
            />

        <TextView
            android:id="@+id/barcaScore_text_view"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "0"
            android:textSize="46sp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_orange_light"
            android:onClick="setBarcaFouls"
            android:text="Foul"
            />
        <TextView
            android:id="@+id/barcaFouls_text_view"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "0"
            android:textSize="46sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="reset"
            android:layout_gravity="center_horizontal"
            android:onClick="resetAll"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/realmadridlogo"

            />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:onClick="setMadridScore"
            android:text="Goal"
            />
        <TextView
            android:id="@+id/madridScore_text_view"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "0"
            android:textSize="46sp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_orange_light"
            android:onClick="setMadridFouls"
            android:text="Foul"
            />
        <TextView
            android:id="@+id/madridFouls_text_view"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "0"
            android:textSize="46sp"/>

    </LinearLayout>
</LinearLayout>
